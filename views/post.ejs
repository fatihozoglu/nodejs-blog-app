<%- include("partials/_header") -%>

<body>

  <!-- Navigation -->
  <%- include("partials/_navigation") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/book.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= selectedPost.title %></h1>
            <h2 class="subheading"><%= selectedPost.subtitle %></h2>
            <span class="meta">Posted by
              <%= selectedPost.author %>
              on <%= selectedPost.date.toDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= selectedPost.content %></p>
          <a href="/posts/edit/<%= selectedPost._id %>" class="btn btn-primary" >Edit</a>
          <a href="/delete_post/<%= selectedPost._id %>" class="btn btn-danger" >Delete</a>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include("partials/_footer") -%>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
